---
import Layout from '../layouts/Layout.astro'
import LoginComponent from '../components/Login.tsx'
---

<Layout>
  <style lang="scss" is:global>
    body {
      background-image: url('/background.png');
      width: 100%;
      height: 100%;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    #modal {
      background-color: var(--bg2);
      padding: 1.5rem;

      h1 {
        margin: 0;
      }

      form {
        display: flex;

        input {
          background: var(--bg2);
          border-left: 2px solid var(--bg2-sub);
          border-top: 2px solid var(--bg2-sub);
          border-bottom: 2px solid var(--bg2-sub);
          border-right: 0;
          flex: 1;
          color: inherit;
          font: inherit;
          padding: 7px 14px;
          outline: 0;

          &::placeholder {
            color: inherit;
          }
        }

        button {
          cursor: pointer;
          background: var(--bg2-sub);
          border: 2px solid var(--bg2-sub);
          color: inherit;
          font: inherit;
          padding: 7px 14px;
        }
      }
    }
  </style>
  <div id="modal">
    <h1>Log In</h1>
    <LoginComponent client:load />
  </div>
</Layout>
